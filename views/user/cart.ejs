        <script>
            document.addEventListener('DOMContentLoaded', function () {
                const removeButtons = document.querySelectorAll('.btn-remove');
                const notyf = new Notyf({
                    duration: 3000,
                    position: {
                        x: 'center',
                        y: 'bottom',
                    },
                    types: [
                        {
                            type: 'success',
                            background: '#dc3545',
                            icon: {
                                className: 'fas fa-check-circle',
                                tagName: 'i',
                                color: '#fff'
                            }
                        },
                        {
                            type: 'error',
                            background: '#dc3545',
                            icon: {
                                className: 'fas fa-times-circle',
                                tagName: 'i',
                                color: '#fff'
                            }
                        }
                    ]
                });

                removeButtons.forEach(button => {
                    button.addEventListener('click', async function (e) {
                        e.preventDefault();
                        const cartId = this.getAttribute('data-cart-item-id');
                        const productId = this.getAttribute('data-productId');

                        try {
                            const response = await fetch(`/remove-cart-item?cartId=${cartId}`, {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ productId }),
                            });

                            const data = await response.json();

                            if (data.success) {
                                this.closest('tr').remove();

                                const subtotalEl = document.getElementById('sub-total');
                                if (subtotalEl) {
                                    subtotalEl.textContent = data.newSubTotal;
                                }

                                notyf.success({
                                    message: "Item has been removed from your cart.",
                                    dismissible: true
                                });

                                setTimeout(() => {
                                    location.reload();
                                }, 2000);
                            } else {
                                throw new Error(data.message);
                            }
                        } catch (error) {
                            console.error('Error removing cart item:', error);
                            notyf.error({
                                message: "An error occurred while removing the item from your cart.",
                                dismissible: true
                            });
                        }
                    });
                });
