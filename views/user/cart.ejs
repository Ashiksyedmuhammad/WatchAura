                                                        <% 
                                                            let productDetail = productDetails.find(detail => 
                                                                detail.productId.toString() === item.productId._id.toString()
                                                            ); 
                                                        %>
                                                        <% if (productDetail && productDetail.discount > 0) { %>
                                                            <div class="original-price" style="text-decoration: line-through; color: #999;">
                                                                <%= productDetail.originalPrice %>
                                                            </div>
                                                            <div class="discounted-price">
                                                                <%= (productDetail.price * (100 - productDetail.discount)) / 100 %>
                                                            </div>
                                                            <!-- <div class="offer-badge" style="font-size: 0.8em; color: #28a745;">
                                                                </%= productDetail.offerTitle %> (</%= productDetail.discount %>% off)
                                                            </div> -->
                                                        <% } else { %>
                                                            <%= item.productId.price %>
                                                        <% } %>
                                                    </div>
                                                </td>
                                                

                                                <!-- <td class="quantity-col tf-cart-item_quantity" cart-data-title="Quantity"> -->



                                                <td class="quantity-col" cart-data-title="Quantity"
                                                    style="display: flex;justify-content: center;">
                                                    <div class="cart-product-quantity cart-quantity">
                                                        <button type="button" class="btn-quantity-decrease"
                                                            style="width: 20px;height:30px;"
                                                            onclick="updateQuantity(this, -1)">-</button>
                                                        <% if (item.productId.stock> 5) { %>
                                                            <input type="text" class="form-control"
                                                                oninput="stockCheck(this, '<%= item.productId.stock %>')"
                                                                value="<%= item.quantity %>" min="1" max="5" step="1"
                                                                data-decimals="0" style="width:50px" required readonly>
                                                            <% } else { %>
                                                                <input type="text" class="form-control"
                                                                    oninput="stockCheck(this, '<%= item.productId.stock %>')"
                                                                    value="<%= item.quantity %>" style="width:50px"
                                                                    min="1" max="<%= item.productId.stock %>" step="1"
                                                                    data-decimals="0" required readonly>
                                                                <% } %>
                                                                    <button type="button" class="btn-quantity-increase"
                                                                        style="width: 20px;height:30px;"
                                                                        onclick="updateQuantity(this, 1)">+</button>
                                                    </div>
                                                </td>
                                                <input id="stockCheck<%= item.productId.stock %>" hidden type="text"
                                                    value="<%= item.productId.stock %>">


                                                <td class="price-col tf-cart-item_total" cart-data-title="Total">
                                                        <div class="cart-total">
                                                            <% 
                                                             productDetail = productDetails.find(detail => 
