// Updated removeFromWishlist function with Notyf

function removeFromWishlist(productId) {
    fetch('/removeWishlistItem', {
        method: 'DELETE',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            
            const productCard = document.querySelector(`[data-product-id="${productId}"]`)
                .closest('.card-product');
            
           
            productCard.style.transition = 'opacity 0.3s ease';
            productCard.style.opacity = '0';
            
            
            setTimeout(() => {
                productCard.remove();
                
                
                const remainingProducts = document.querySelectorAll('.card-product');
                if (remainingProducts.length === 0) {
                    const wishlistContainer = document.querySelector('.grid-layout');
                    wishlistContainer.innerHTML = `
                        <div class="text-center w-100">
                            <h3>Your wishlist is empty</h3>
                            <p>Browse our products and add items to your wishlist!</p>
                        </div>
                    `;
                }
            }, 300);

            
            notyf.success(data.message);
        } else {
           
            notyf.error(data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
        notyf.error('Failed to remove product from wishlist');
    });
}


