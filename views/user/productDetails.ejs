    <style>
        .related-products {
            padding: 60px 0;
            background-color: #ffffff;
        }

        .related-products h3 {
            text-align: center;
            margin-bottom: 40px;
            font-size: 28px;
            font-weight: 600;
            color: #333333;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .product-card {
            background-color: #ffffff;
            border: 1px solid #ffffff;
            border-radius: 4px;
            transition: all 0.3s ease;
            margin-bottom: 30px;
            position: relative;
            overflow: hidden;
        }

        .product-card:hover {
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .product-card img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover img {
            transform: scale(1.05);
        }

        .product-info {
            padding: 20px;
        }

        .product-card h5 {
            font-size: 16px;
            font-weight: 500;
            color: #333333;
            margin-bottom: 10px;
            line-height: 1.4;
            text-align: center;
        }

        .product-card p {
            font-size: 18px;
            font-weight: 600;
            color: #4a4a4a;
            margin-bottom: 15px;
            text-align: center;
        }

        .product-card .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 10px 20px;
            background-color: #000000;
            color: #ffffff;
            text-decoration: none;
            border-radius: 4px;
            transition: all 0.3s ease;
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            width: 100%;
            /* Full width of its container */
            box-sizing: border-box;
        }

        .product-card .btn:hover {
            background-color: #3d464d;
        }

        .product-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #e74c3c;
            color: #ffffff;
            padding: 5px 10px;
            font-size: 12px;
            font-weight: 600;
            border-radius: 3px;
        }

        @media (max-width: 991px) {
            .col-md-3 {
                width: 50%;
            }
        }

        @media (max-width: 575px) {
            .col-md-3 {
                width: 100%;
            }

            .related-products h3 {
                font-size: 24px;
            }
        }

        .tf-product-info-buy-button {
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
        }

        .tf-product-btn-wishlist {
            display: flex;
            align-items: center;
            justify-content: center;
            margin-left: 15px;
        }

        .btn-add-to-cart {
            flex-grow: 1;
        }
    </style>


