                <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
                <script defer src="https://cdn.crop.guide/loader/l.js?c=YMTDVY"></script>
                <script>
                    document.addEventListener('DOMContentLoaded', function() {
    const updateOrderStatusForm = document.getElementById('update-order-status');
    const statusSelect = document.getElementById('product-status');
    const hiddenOrderId = document.getElementById('hiddenid');
    const hiddenItemId = document.getElementById('hiddenitemid');

    updateOrderStatusForm.addEventListener('submit', function(event) {
        event.preventDefault();
        const statusValue = statusSelect.value.trim();
        const orderId = hiddenOrderId.value.trim();
        const itemId = hiddenItemId.value.trim();
        updateOrderStatus(statusValue, orderId, itemId);
    });

    const updateOrderStatus = async (statusValue, orderId, itemId) => {
        try {
            const response = await fetch('/admin/updateStatus', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    orderid: orderId,
                    itemid: itemId,
                    productStatus: statusValue
                })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire({
                    title: 'Success!',
                    text: data.message || 'Order status has been updated successfully.',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed && data.redirectUrl) {
                        window.location.href = data.redirectUrl;
                    } else {
                        window.location.reload();
                    }
                });
            } else {
                Swal.fire({
                    title: 'Error!',
                    text: data.message || 'Failed to update order status. Please try again.',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            }
        } catch (error) {
            console.error('Error during order status update:', error);
            Swal.fire({
                title: 'Error!',
                text: 'An unexpected error occurred. Please try again later.',
                icon: 'error',
                confirmButtonText: 'OK'
            });
        }
    }
});
                </script>
               

