                                        <th> First Name </th>
                                        <th> E-mail </th>
                                        <th> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (users.length > 0) { %>
                                        <% users.forEach((user, index) => { %>
                                            <tr>
                                                <td><%= index + 1 %></td>
                                                <td><%= user.firstName %></td>
                                                <td><%= user.email %></td>
                                                <td>
                                                    <form action="/admin/<%= user.isBlocked ? 'unblock' : 'block' %>/<%= user._id %>" method="POST">
                                                        <button type="submit" class="btn <%= user.isBlocked ? 'btn-success' : 'btn-danger' %>">
                                                            <%= user.isBlocked ? 'UNBLOCK' : 'BLOCK' %>
                                                        </button>
                                                    </form>                                                    
                                                </td>
                                            </tr>
                                        <% }); %>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="text-center">No users found.</td>
                                        </tr>
                                    <% } %>
                                </tbody>
                                
                            </table>
                        </div>
