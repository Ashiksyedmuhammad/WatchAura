                            <script
                                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                            <script>
                                // Validation function
                                function validateCouponForm(formData) {
                                    const errors = {};

                                    // Coupon ID validation
                                    const couponId = formData.get('couponId');
                                    if (!couponId || couponId.trim() === '') {
                                        errors.couponId = 'Coupon ID is required';
                                    } else if (!/^[A-Za-z0-9]+$/.test(couponId)) {
                                        errors.couponId = 'Coupon ID should only contain letters and numbers';
                                    }

                                    // Discount validation
                                    const discount = formData.get('discount');
                                    if (!discount || isNaN(discount) || discount < 0 || discount > 100) {
                                        errors.discount = 'Discount must be a number between 0 and 100';
                                    }

                                    // Minimum Purchase Amount validation
                                    const minPurchaseAmount = formData.get('minPurchaseAmount');
                                    if (!minPurchaseAmount || isNaN(minPurchaseAmount) || minPurchaseAmount < 0) {
                                        errors.minPurchaseAmount = 'Minimum Purchase Amount must be a positive number';
                                    }


                                    const maxPurchaseAmount = parseFloat(formData.get('maxAmount'));
                                    if (isNaN(maxPurchaseAmount) || maxPurchaseAmount < 0) {
                                        errors.maxPurchaseAmount = 'Maximum Purchase Amount must be a positive number';
                                    }

                                    if (minPurchaseAmount >= maxPurchaseAmount) {
                                        errors.maxPurchaseAmount = 'Maximum Purchase Amount must be greater than Minimum Purchase Amount';
                                    }

                                    // Maximum Amount validation
                                    const maxAmount = formData.get('maxAmount');
                                    if (!maxAmount || isNaN(maxAmount) || maxAmount < 0) {
                                        errors.maxAmount = 'Maximum Amount must be a positive number';
                                    }

                                    // Expiry Date validation
                                    const expiryDate = new Date(formData.get('expiryDate'));
                                    const today = new Date();
                                    if (isNaN(expiryDate.getTime()) || expiryDate < today) {
                                        errors.expiryDate = 'Expiry Date must be a valid future date';
                                    }



                                    return errors;
                                }

                                document.addEventListener('DOMContentLoaded', function () {
                                    // Add Coupon Form Validation
                                    const addCouponForm = document.getElementById('addCouponForm');
                                    if (addCouponForm) {
                                        addCouponForm.addEventListener('submit', function (e) {
                                            e.preventDefault();
                                            const formData = new FormData(this);
                                            const errors = validateCouponForm(formData);

                                            if (Object.keys(errors).length === 0) {

                                                fetch('/admin/add-coupon', {
                                                    method: 'POST',
                                                    body: new URLSearchParams(formData),
                                                    headers: {
                                                        'Content-Type': 'application/x-www-form-urlencoded',
                                                    }
                                                })
                                                    .then(response => response.json())
                                                    .then(data => {
                                                        if (data.success) {
                                                            Swal.fire({
                                                                icon: 'success',
                                                                title: 'Success!',
                                                                text: data.message,
                                                            }).then(() => {
                                                                window.location.href = data.redirectUrl;
                                                            });
                                                        } else {
                                                            Swal.fire({
                                                                icon: 'error',
                                                                title: 'Oops...',
                                                                text: data.message,
                                                            });
                                                        }
                                                    })
                                                    .catch(error => {
                                                        console.error('Error:', error);
                                                        Swal.fire({
                                                            icon: 'error',
                                                            title: 'Oops...',
                                                            text: 'An error occurred while adding the coupon.',
                                                        });
                                                    });
                                            } else {

                                                // displayErrors(errors, 'addCouponForm');
                                            }
                                        });
                                    }

                                    // Edit Coupon Form Validation
                                    const editCouponForms = document.querySelectorAll('.edit-coupon-form');
                                    editCouponForms.forEach(form => {
                                          });
                                });

                                // Delete Coupon
                                const deleteCouponButtons = document.querySelectorAll('.delete-coupon');
                                deleteCouponButtons.forEach(button => {
                                    button.addEventListener('click', function () {
                                        const couponId = this.dataset.couponId;
                                        Swal.fire({
                                            title: 'Are you sure?',
                                            text: "You won't be able to revert this!",
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonColor: '#3085d6',
                                            cancelButtonColor: '#d33',
                                            confirmButtonText: 'Yes, delete it!'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                fetch(`/admin/delete-coupon/${couponId}`, {
                                                    method: 'DELETE'
                                                })
                                                    .then(response => response.json())
                                                    .then(data => {
                                                        if (data.success) {
                                                            Swal.fire(
                                                                'Deleted!',
                                                                data.message,
                                                                'success'
                                                            ).then(() => {

                                                                window.location.reload();
                                                            });
                                                        } else {
                                                            Swal.fire({
                                                                icon: 'error',
                                                                title: 'Oops...',
                                                                text: data.message,
                                                            });
                                                        }
                                                    })
                                                    .catch(error => {
                                                        console.error('Error:', error);
                                                        Swal.fire({
                                                            icon: 'error',
                                                            title: 'Oops...',
                                                            text: 'An error occurred while deleting the coupon.',
                                                        });
                                                    });
                                            }
                                        });
                                    });
                                });

                            </script>


    </body>

